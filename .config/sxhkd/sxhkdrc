# screenshots

Print
        maim -q -u -m 9 ~/Pictures/Screenshots/$(date +%Y.%m.%d-%H.%M.%S).jpg && notify-send "Screenshot saved"

super + ctrl + c
	maim -q -s -u -m 9 ~/Pictures/Screenshots/$(date +%Y.%m.%d-%H.%M.%S).jpg  && notify-send "Screenshot saved"

super + shift + c
        maim -q -s -u | xclip -selection clipboard -t image/png && notify-send "Screenshot captured" 

super + Print
	maim -q -u | xclip -selection clipboard -t image/png && notify-send "Screenshot captured"

# super + shift + Print
#        feh ~/Pictures/Screenshots

# media keys
XF86AudioRaiseVolume 
    amixer -D default set Master 5%+ && amixer -D default set Master unmute
XF86AudioLowerVolume 
    amixer -D default set Master 5%- && amixer -D default set Master unmute 
XF86AudioMute 
    pactl set-sink-mute @DEFAULT_SINK@ toggle 

super + Return
    kitty

super + d
    rofi matching fuzzy -show combi

super + e
    kitty --class=editor --name=nvim -T=nvim -o font_size=14.0 -o window_padding_width=10 -d=~/git nvim .

super + shift + r
	pkill -USR1 -x sxhkd && $HOME/.config/bspwm/bspwmrc && killall polybar && . ~/.config/polybar/launch.sh

# BSPWM

super + w
	bspc node -{c,k}

super + f
	~/.config/bspwm/fullscreen.sh

super + y
	bspc node @focused:/ -R 90

super + g
	bspc node -s biggest.local


#
# state/flags
#

super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}


# focus/swap

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + c
	bspc node -{f,s} next.local


super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#
# preselect
#

super + {u,o}
	bspc node -p {south,east}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + ctrl + space
	bspc node -p cancel

ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + control + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + control + shift + {h,j,k,l}
        bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

ctrl + Print
        echo 'win10q35 attach 1532:0219 046d:c539 046d:c087' | socat - UNIX-CONNECT:/var/run/vm-usbserver.sock && notify-send "Attached usb devices" 
